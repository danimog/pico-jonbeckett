{% extends "base.twig" %}

{% block body %}

<div class="row">

<div class="col-md-8">
{{ content }}
</div>

<div class="col-md-4">

<h3>Recent Posts</h3>
{% for page in pages|sort_by("time")|reverse %}
    {% if page.date %}
        <ul>
            <li><strong><a href="{{ page.url }}">{{ page.title }}</a></strong><br />{{ page.date_formatted }}</li>
        </ul>
    {% endif %}
{% endfor %}

</div>

</div> <!-- .row -->

{% endblock %}
